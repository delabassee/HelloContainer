FROM oracle/graalvm-ce:latest AS builder
RUN gu install native-image
RUN yum install -y maven

WORKDIR /world/
COPY pom.xml /world
RUN mvn dependency:go-offline

COPY src /world/src
RUN mvn package

RUN native-image -cp ./target/HelloWorld-1.0-SNAPSHOT.jar -H:Name=HelloWorld -H:Class=HelloWorld -H:+ReportUnsupportedElementsAtRuntime --allow-incomplete-classpath

FROM bitnami/minideb:jessie
COPY --from=builder /world/HelloWorld .
CMD ./HelloWorld